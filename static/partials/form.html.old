<section>
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<h2>Aid Request Application</h2>
			<p>Everyday the Children of Central Asia Foundation works to.....</p>
			  <div class="well well-sm">
			    <strong>Note: </strong>You can save this form by clicking the "Save" button at the bottom of the page.
			  </div>
		</div>
	</div>
	<div class="clearfix" style="height:32px;"></div>
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="panel panel-warning">
				<div class="panel-heading"><strong>Please complete the following</strong></div>
				<div class="panel-body">
					<form id="aidForm" class="form-horizontal" name="aidForm" role="form" novalidate>
					  <h4>1. Organization Details (If Applicable)</h4>
					  
					  <hr/>


					  <div class="form-group" ng-class="{'has-success' : !aidForm.uOrgName.$error.required && (submitted || aidForm.uOrgName.$touched)}">
					    <label for="uOrgName" class="col-sm-3 control-label">Organization Name</label>
					    <div class="col-sm-6">
						    <input type="text" name="uOrgName" class="form-control" ng-model="entry.org_name" placeholder="Organization Name" required>
					    </div>
					  </div>


					  <div class="form-group" ng-class="{'has-success' : !aidForm.uAddress.$error.required && (submitted || aidForm.uAddress.$touched)}">
					    <label for="uAddress" class="col-sm-3 control-label">Organization Address</label>
					    <div class="col-sm-9">
						    <textarea rows="3" name="uAddress" class="form-control" ng-model="entry.address" placeholder="Please enter full address" required></textarea>
					    </div>
					  </div>



					  <div class="form-group" ng-class="{'has-success' : submitted || aidForm.uWebsite.$touched}">
					    <label for="uWebsite" class="col-sm-3 control-label">Website</label>
					    <div class="col-sm-9">
						    <input type="text" name="uWebsite" class="form-control" ng-model="entry.website" placeholder="Website URL">
					    </div>
					  </div>

					  <br/>

					  <h4>2. Contact Information</h4>
					  
					  <hr/>



					  <div class="form-group" ng-class="{ 'has-error' : aidForm.uFirstName.$error.required && (submitted || aidForm.uFirstName.$touched), 'has-success' : !aidForm.uFirstName.$error.required && (submitted || aidForm.uFirstName.$touched)}">
					    <label for="uFirstName" class="col-sm-3 control-label" required>First Name</label>
					    <div class="col-sm-3">
						    <input type="text" name="uFirstName" class="form-control" ng-model="entry.first_name" placeholder="First Name" required>
						    <span ng-show="aidForm.uFirstName.$error.required && (submitted || aidForm.uFirstName.$touched)" class="help-block">First Name is Required</span>
					    </div>
					  </div>



					  <div class="form-group" ng-class="{ 'has-error' : aidForm.uLastName.$error.required && (submitted || aidForm.uLastName.$touched), 'has-success' : !aidForm.uLastName.$error.required && (submitted || aidForm.uLastName.$touched)}">
					    <label for="uLastName" class="col-sm-3 control-label" required>Last Name</label>
					    <div class="col-sm-5">
						    <input type="text" name="uLastName" class="form-control" ng-model="entry.last_name" placeholder="Last Name" required>
						    <span ng-show="aidForm.uLastName.$error.required && (submitted || aidForm.uLastName.$touched)" class="help-block">Last Name is Required</span>
					    </div>
					  </div>



					  <div class="form-group" ng-class="{ 'has-error' : aidForm.uPhone.$error.required && (submitted || aidForm.uPhone.$touched), 'has-success' : !aidForm.uPhone.$error.required && (submitted || aidForm.uPhone.$touched)}">
					    <label for="uPhone" class="col-sm-3 control-label" required>Phone Number</label>
					    <div class="col-sm-3">
						    <input type="text" name="uPhone" class="form-control" ng-model="entry.phone" placeholder="Phone Number" required>
						    <span ng-show="aidForm.uPhone.$error.required && (submitted || aidForm.uPhone.$touched)" class="help-block">Phone number is Required</span>
					    </div>
					  </div>



					  <div class="form-group" ng-class="{ 'has-error' : aidForm.uEmail.$error.required && (submitted || aidForm.uEmail.$touched), 'has-success' : !aidForm.uEmail.$error.required && (submitted || aidForm.uEmail.$touched)}">
					    <label for="uEmail" class="col-sm-3 control-label" required>Email Address</label>
					    <div class="col-sm-6">
						    <input type="text" name="uEmail" class="form-control" ng-model="entry.email" placeholder="Email Address" required>
						    <span ng-show="aidForm.uEmail.$error.required && (submitted || aidForm.uEmail.$touched)" class="help-block">Email is Required</span>
					    </div>
					  </div>

	 					
	 				  <br/>


					  <h4>3. Project Proposal</h4>
					  
					  <hr/>



					  <div class="form-group" ng-class="{ 'has-error' : aidForm.uProjectName.$error.required && (submitted || aidForm.uProjectName.$touched), 'has-success' : !aidForm.uProjectName.$error.required && (submitted || aidForm.uProjectName.$touched)}">
					    <label for="uProjectName" class="col-sm-3 control-label" required>Program / Project Name</label>
					    <div class="col-sm-6">
						    <input type="text" name="uProjectName" class="form-control" ng-model="entry.project_name" placeholder="Program / Project Name" required>
						    <span ng-show="aidForm.uProjectName.$error.required && (submitted || aidForm.uProjectName.$touched)" class="help-block">Program / Project Name is Required</span>
					    </div>
					  </div>




					  <div class="form-group" ng-class="{ 'has-error' : aidForm.uCostEstimate.$error.required && (submitted || aidForm.uCostEstimate.$touched), 'has-success' : !aidForm.uCostEstimate.$error.required && (submitted || aidForm.uCostEstimate.$touched)}">
					    <label for="uCostEstimate" class="col-sm-3 control-label" required>Estimated total cost of the project</label>
					    <div class="col-sm-4">
					    	<div class="input-group">
						    	<div class="input-group-addon">$</div>
						    	<input type="number" min="0" name="uCostEstimate" class="form-control" ng-model="entry.project_cost_estimate" required>
						    </div>
						    <span ng-show="aidForm.uCostEstimate.$error.required && (submitted || aidForm.uCostEstimate.$touched)" class="help-block">Cost estimate is Required</span>
					    </div>
					  </div>



					  <div class="form-group" ng-class="{ 'has-error' : aidForm.uGrantRequestAmount.$error.required && (aidForm.uGrantRequestAmount.$touched), 'has-success' : !aidForm.uGrantRequestAmount.$error.required && (submitted || aidForm.uGrantRequestAmount.$touched)}">
					    <label for="uGrantRequestAmount" class="col-sm-3 control-label" required>Amount of grant requested</label>
					    <div class="col-sm-4">
					    	<div class="input-group">
						    	<div class="input-group-addon">$</div>
						    	<input type="number" min="0" name="uGrantRequestAmount" class="form-control" ng-model="entry.project_grant_amount_requested"  required>
						    </div>
						    <span ng-show="aidForm.uGrantRequestAmount.$error.required && (submitted || aidForm.uGrantRequestAmount.$touched)" class="help-block">Grant amount is Required</span>
					    </div>
					  </div>




					  <div class="form-group" ng-class="{ 'has-success' : !aidForm.uOtherAssistance.$error.required && (submitted || aidForm.uOtherAssistance.$touched)}">
					    <label for="uOtherAssistance" class="col-sm-3 control-label">Assistance requested other than monetary</label>
					    <div class="col-sm-9">
						    <textarea rows="3" name="uOtherAssistance" class="form-control" ng-model="entry.project_other_assistance" placeholder="Assistance requested other than monetary"></textarea>
					    </div>
					  </div>



					  <div class="form-group" ng-class="{ 'has-error' : aidForm.uProjectDescription.$error.required && (submitted || aidForm.uProjectDescription.$touched), 'has-success' : !aidForm.uProjectDescription.$error.required && (submitted || aidForm.uProjectDescription.$touched)}">
					    <label for="uProjectDescription" class="col-sm-3 control-label" required>Description of the project</label>
					    <div class="col-sm-9">
						    <textarea rows="5" name="uProjectDescription" class="form-control" ng-model="entry.project_description" placeholder="What the project will be, what will happen, who will be involved, etc." required></textarea>
						    <span ng-show="aidForm.uProjectDescription.$error.required && (submitted || aidForm.uProjectDescription.$touched)" class="help-block">Project Description is required</span>
					    </div>
					  </div>




					  <div class="form-group" ng-class="{ 'has-error' : aidForm.uProjectObjectives.$error.required && (submitted || aidForm.uProjectObjectives.$touched), 'has-success' : !aidForm.uProjectObjectives.$error.required && (submitted || aidForm.uProjectObjectives.$touched)}">
					    <label for="uProjectObjectives" class="col-sm-3 control-label" required>Specific objective(s)</label>
					    <div class="col-sm-9">
						    <textarea rows="3" name="uProjectObjectives" class="form-control" ng-model="entry.project_objectives" placeholder="Explain how the project meets the objectives of the community" required></textarea>
						    <span ng-show="aidForm.uProjectObjectives.$error.required && (submitted || aidForm.uProjectObjectives.$touched)" class="help-block">Project Objectives are required</span>
					    </div>
					  </div>



					  <div class="form-group" ng-class="{ 'has-error' : aidForm.uProjectExpectedResults.$error.required && (submitted || aidForm.uProjectExpectedResults.$touched), 'has-success' : !aidForm.uProjectExpectedResults.$error.required && (submitted || aidForm.uProjectExpectedResults.$touched)}">
					    <label for="uProjectExpectedResults" class="col-sm-3 control-label" required>Expected results and their use</label>
					    <div class="col-sm-9">
						    <textarea rows="3" name="uProjectExpectedResults" class="form-control" ng-model="entry.project_expected_results" placeholder="As far as possible, the results must be measurable on the basis of criteria laid down for that purpose" required></textarea>
						    <span ng-show="aidForm.uProjectExpectedResults.$error.required && (submitted || aidForm.uProjectExpectedResults.$touched)" class="help-block">Expected Results are required</span>
					    </div>
					  </div>


					  <div class="form-group" ng-class="{ 'has-error' : aidForm.uProjectStartDate.$error.required && (submitted || aidForm.uProjectStartDate.$touched), 'has-success' : !aidForm.uProjectStartDate.$error.required && (submitted || aidForm.uProjectStartDate.$touched)}">
					    <label for="uProjectStartDate" class="col-sm-3 control-label" required>Proposed Start Date</label>
					    <div class="col-sm-4">
						    <input type="date" name="uProjectStartDate" class="form-control" ng-model="entry.project_start_date" required></input>
						    <span ng-show="aidForm.uProjectStartDate.$error.required && (submitted || aidForm.uProjectStartDate.$touched)" class="help-block">Proposed Start Date is Required</span>
					    </div>
					  </div>



					  <div class="form-group" ng-class="{ 'has-error' : aidForm.uProjectEndDate.$error.required && (submitted || aidForm.uProjectEndDate.$touched), 'has-success' : !aidForm.uProjectEndDate.$error.required && (submitted || aidForm.uProjectEndDate.$touched)}">
					    <label for="uProjectEndDate" class="col-sm-3 control-label" required>Expected End Date</label>
					    <div class="col-sm-4">
						    <input type="date" name="uProjectEndDate" class="form-control" ng-model="entry.project_end_date" required></input>
						    <span ng-show="aidForm.uProjectEndDate.$error.required && (submitted || aidForm.uProjectEndDate.$touched)" class="help-block">Expected End Date is Required</span>
					    </div>
					  </div>




					  <div class="form-group" ng-class="{ 'has-error' : aidForm.uProjectPlan.$error.required && (submitted || aidForm.uProjectPlan.$touched), 'has-success' : !aidForm.uProjectPlan.$error.required && (submitted || aidForm.uProjectPlan.$touched)}">
					    <label for="uProjectPlan" class="col-sm-3 control-label" required>Project Plan</label>
					    <div class="col-sm-9">
						    <textarea rows="6" name="uProjectPlan" class="form-control" ng-model="entry.project_plan" placeholder="Detailed timetable and expenses for carrying out each stage of the project showing the main key dates and the objectives/expected results for each stage" required></textarea>
						    <span ng-show="aidForm.uProjectPlan.$error.required && (submitted || aidForm.uProjectPlan.$touched)" class="help-block">Project Plan is required</span>
					    </div>
					  </div>




					  <!-- RECAPTCHA -->
					  <!--
					  <div class="form-group">
					  		<label for="recaptcha">Are you Human?</label>
					    	<div class="g-recaptcha" id="recaptcha" data-sitekey="6Leq3gwTAAAAAAJ4AndNEzrNc-bPMUYwA4Gh3vfC"></div>
					  </div>
					  -->
					  <br>
					  <hr/>
					  <div class="centered">
					    <button class="btn btn-primary btn-lg" ng-click="save()">Save</button>
					    <button class="btn btn-warning btn-lg" ng-click="clear()">Clear</button>
					  	<button type="submit" class="btn btn-primary btn-lg" ng-click="submit()">Submit</button>
					  </div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>