<?xml version="1.0" encoding="UTF-8"?>

<project name="lresptofunrun" default="dist">
    <property file="config/build.properties" />
    <!-- ============================================  -->
    <!-- Target: prepare                               -->
    <!-- ============================================  -->
    <target name="prepare">
        <echo msg="Making directory ./build" />
        <mkdir dir="./build" />
    </target>

    <!-- ============================================  -->
    <!-- Target: build                                 -->
    <!-- ============================================  -->
    <target name="build" depends="prepare">

        <echo msg="Copying files to ./build directory..." />
        <copy file="./index.php" tofile="./build/index.php" />
        <copy file="./.htaccess" tofile="./build/.htaccess" />

        <copy todir="./build/config">
          <fileset dir="config">
              <include name="**"></include>
              <exclude name="**/.svn/**"></exclude>
          </fileset>
        </copy>
        <copy todir="./build/vendor">
          <fileset dir="vendor">
              <include name="**"></include>
              <exclude name="**/.svn/**"></exclude>
          </fileset>
        </copy>
        <copy todir="./build/static">
          <fileset dir="static">
              <include name="**"></include>
              <exclude name="**/.svn/**"></exclude>
          </fileset>
        </copy>
        <copy todir="./build/templates">
          <fileset dir="templates">
              <include name="**"></include>
              <exclude name="**/.svn/**"></exclude>
          </fileset>
        </copy>
    </target>

    <!-- ============================================  -->
    <!-- (DEFAULT)  Target: dist                       -->
    <!-- ============================================  -->
    <target name="dist" depends="build">
      <echo msg="Running git update..." />
      <exec command="ssh ${username}@${hostname}} "cd ${documentroot};git pull;"" dir="/home" />
    </target>
</project>
